<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F78A5F">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 학 챠"
            android:fontFamily="@font/bmuma"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/grass"/>

    </LinearLayout>
    <TableLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:stretchColumns="*">
        <TableRow>
            <Button
                android:background="#E7E7E7"
                android:id="@+id/bt_old_menu"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/bmuma"
                android:text="구학\n(들락날락)"
                android:textSize="22dp" />

            <Button
                android:background="#E7E7E7"
                android:id="@+id/bt_new_menu"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/bmuma"
                android:text="신학\n(다래락)"
                android:textSize="22dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:background="#E7E7E7"
                android:id="@+id/bt_stone_menu"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/bmuma"
                android:text="돌집\n(워커하우스)"
                android:textSize="22dp" />
            <Button
                android:background="#E7E7E7"
                android:id="@+id/bt_random"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:text="랜덤\n(미확정)"
                android:fontFamily="@font/bmuma"
                android:textSize="22dp"/>


        </TableRow>


    </TableLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/logo2" />

</LinearLayout>